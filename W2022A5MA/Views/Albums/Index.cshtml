@model IEnumerable<W2022A5MA.Models.AlbumBaseViewModel>

@{
    ViewBag.Title = "Albums";
}


<div class="main">
    <div class="about_grid1">
        <div class="container">
            <div class="album_1">

                @foreach (var item in Model)
                {
                <div class="col-md-4 album_5">
                    <div class="col_1_of_2 span_1_of_2">
                        <img src="@Html.DisplayFor(modelItem => item.UrlAlbum)" class="img-responsive" alt="Album's cover art" width="250" height="250" />
                    </div>
                    <div class="col_1_of_2 span_1_of_2">
                        <h3><a href="#"> @Html.DisplayFor(modelItem => item.Name)</a></h3>
                        <p>Genre: @Html.DisplayFor(modelItem => item.Genre)</p>
                        <p>Release date: @Html.DisplayFor(modelItem => item.ReleaseDate)</p>
                        <br />
                        <button> @Html.ActionLink("Details", "Details", new { id = item.Id })</button>
                    </div>
                    <div class="clearfix"> </div>
                    <p class="off1"><strong>Coordinator who handles this Album:</strong>  @Html.DisplayFor(modelItem => item.Coordinator) </p>
                    
                </div>
                
                }

            </div>
        </div>
    </div>
</div>

