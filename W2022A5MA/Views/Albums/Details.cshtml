@model W2022A5MA.Models.AlbumWithDetailViewModel

@{
    ViewBag.Title = "Details";
}
@{
    var userAccount = new W2022A5MA.Controllers.RequestUser(User as System.Security.Claims.ClaimsPrincipal);
}

<h2>Details -  @Html.DisplayFor(model => model.Name)</h2>

<div>
    <h4>Album details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ReleaseDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.UrlAlbum)
        </dt>

        <dd>
            <img src="@Html.DisplayFor(model => model.UrlAlbum)" alt="artist's photo" width="150" />
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Genre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Genre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Coordinator)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Coordinator)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Tracks);
        </dt>

        <dd>
            @Model.Tracks.Count()
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Artists);
        </dt>

        <dd>
            @Model.Artists.Count()
        </dd>

    </dl>
</div>
<p>

    @Html.ActionLink("Back to List", "Index") |

    @if (userAccount.HasRoleClaim("Clerk") )
    {
         @Html.ActionLink("Add track to this album", "AddTrack", new { id = Model.Id })
    }

</p>
