@model IEnumerable<W2022A5MA.Models.ArtistBaseViewModel>

@{
    ViewBag.Title = "Artists";
}

<h2>Artist List</h2>

<p>
    @{
        var userAccount = new W2022A5MA.Controllers.RequestUser(User as System.Security.Claims.ClaimsPrincipal);
    }

    @if (userAccount.HasRoleClaim("Executive"))
    {
        @Html.ActionLink("Create New artist", "Create")
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BirthName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BirthOrStartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UrlArtist)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Executive)
        </th>


        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.BirthName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.BirthOrStartDate)
    </td>
    <td>
        <img src="@Html.DisplayFor(modelItem => item.UrlArtist)" alt="artist's photo" width="150" />
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Genre)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Executive)
    </td>

    <td>
        @Html.ActionLink("Details", "Details", new { id = item.Id })
    </td>
</tr>
}

</table>
